{
  "name": "@tallow/mdns-daemon",
  "version": "1.0.0",
  "description": "mDNS/Bonjour/Zeroconf daemon for TALLOW file transfer",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "dev:debug": "DEBUG=mdns* tsx watch src/index.ts",
    "lint": "eslint src/**/*.ts",
    "clean": "rimraf dist",
    "prepare": "npm run build"
  },
  "bin": {
    "tallow-daemon": "./dist/index.js"
  },
  "keywords": [
    "mdns",
    "bonjour",
    "zeroconf",
    "discovery",
    "file-transfer",
    "tallow"
  ],
  "author": "Tallow Team",
  "license": "MIT",
  "dependencies": {
    "bonjour-service": "^1.2.1",
    "multicast-dns": "^7.2.5",
    "ws": "^8.16.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/multicast-dns": "^7.2.4",
    "@types/node": "^20.11.0",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "rimraf": "^5.0.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
