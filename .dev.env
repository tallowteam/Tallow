# Development Environment Configuration
# Optimized settings for better dev server stability

# Next.js Dev Server Configuration
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1
PORT=3000

# Memory Settings (prevents memory leaks and OOM)
NODE_OPTIONS="--max-old-space-size=4096 --max-semi-space-size=256"

# Dev Server Timeouts and Performance
# Increase request timeout to prevent 408 errors
HTTP_TIMEOUT=120000
KEEP_ALIVE_TIMEOUT=65000

# Fast Refresh Configuration
FAST_REFRESH=true
FAST_REFRESH_TIMEOUT=3000

# Webpack Configuration
WEBPACK_WATCH_POLL=false
WEBPACK_WATCH_AGGREGATION_TIMEOUT=200
WEBPACK_MEMORY_LIMIT=2048

# Service Worker - Disabled in development
SKIP_SERVICE_WORKER=true

# Hot Reload Settings
WATCHPACK_POLLING=false
CHOKIDAR_USEPOLLING=false

# Build Performance
NEXT_PRIVATE_STANDALONE=false
NEXT_PRIVATE_SKIP_SIZE_CHECK=true
