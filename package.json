{
  "name": "tallow",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "node scripts/clear-sw-cache.js && node scripts/dev-server.js",
    "dev:simple": "node --max-old-space-size=4096 ./node_modules/.bin/next dev --webpack -H 0.0.0.0 -p 3000",
    "dev:turbo": "node --max-old-space-size=4096 ./node_modules/.bin/next dev --turbo -H 0.0.0.0 -p 3000",
    "dev:inspect": "NODE_OPTIONS='--inspect' npm run dev:simple",
    "dev:noclear": "node scripts/dev-server.js",
    "build": "npm run optimize:svg && next build --webpack",
    "build:analyze": "ANALYZE=true npm run build",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "quality": "npm run type-check && npm run lint",
    "optimize:svg": "svgo -f public --config svgo.config.js",
    "optimize:fonts": "node scripts/optimize-fonts.js",
    "perf:measure": "npm run build && node scripts/check-bundle-size.js",
    "perf:test": "node scripts/check-bundle-size.js",
    "perf:bundle": "node scripts/performance-test.js bundle",
    "perf:memory": "node scripts/performance-test.js memory",
    "perf:transfer": "node scripts/performance-test.js transfer",
    "perf:vitals": "node scripts/performance-test.js vitals",
    "perf:full": "node scripts/performance-test.js full",
    "perf:lighthouse": "lighthouse http://localhost:3000 --output=html --output-path=./lighthouse-report.html --view",
    "perf:ci": "lhci autorun",
    "analyze:bundle": "node scripts/analyze-bundle.js",
    "analyze": "npm run build && npm run analyze:bundle",
    "bench:lighthouse": "node scripts/benchmark/lighthouse-ci.js",
    "bench:bundle": "node scripts/benchmark/bundle-size-tracker.js",
    "bench:transfer": "node scripts/benchmark/transfer-speed-benchmark.js",
    "bench:regression": "node scripts/benchmark/performance-regression.js",
    "bench:baseline": "node scripts/benchmark/performance-regression.js set-baseline",
    "bench:all": "npm run bench:bundle && npm run bench:transfer && npm run bench:lighthouse",
    "optimize:images": "node scripts/optimize-images.js",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:unit:ui": "vitest --ui",
    "test:unit:coverage": "vitest run --coverage",
    "test:crypto": "vitest run tests/unit/crypto",
    "test:component": "vitest run components",
    "test:integration": "vitest run tests/integration",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:e2e": "playwright test tests/e2e",
    "test:visual": "playwright test tests/e2e/visual-regression.spec.ts",
    "test:visual:update": "playwright test tests/e2e/visual-regression.spec.ts --update-snapshots",
    "test:all": "npm run test:unit:coverage && npm run test",
    "test:ci": "npm run test:unit:coverage && npm run test --reporter=junit",
    "security:check": "node scripts/security-check.js",
    "security:audit": "npm audit --audit-level=moderate",
    "security:full": "npm run security:check && npm run security:audit",
    "prepare": "husky install",
    "docs": "typedoc",
    "docs:watch": "typedoc --watch",
    "docs:serve": "npx serve docs/api",
    "metrics": "curl http://localhost:3000/api/metrics",
    "metrics:watch": "watch -n 5 curl http://localhost:3000/api/metrics",
    "health": "node scripts/health-check.js",
    "health:watch": "watch -n 10 node scripts/health-check.js",
    "verify:features": "tsx scripts/verify-features.ts",
    "verify:features:watch": "tsx watch scripts/verify-features.ts",
    "verify:features:json": "tsx scripts/verify-features.ts --format json",
    "verify:features:html": "tsx scripts/verify-features.ts --format html",
    "verify:408fix": "node scripts/verify-408-fix.js",
    "clear:cache": "node scripts/clear-sw-cache.js",
    "clear:cache:full": "node scripts/clear-sw-cache.js && rm -rf .next/cache node_modules/.cache",
    "cache:auto": "node scripts/auto-clear-cache.js",
    "nas:sync": "node scripts/auto-sync-nas.js",
    "bots:start": "npm run cache:auto & npm run nas:sync"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "tsc-files --noEmit"
    ],
    "*.{js,jsx,mjs}": [
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.975.0",
    "@aws-sdk/lib-storage": "^3.975.0",
    "@fontsource/playfair-display": "^5.2.8",
    "@heroicons/react": "^2.2.0",
    "@noble/ciphers": "^2.1.1",
    "@noble/curves": "^2.0.1",
    "@noble/hashes": "^2.0.1",
    "@noble/post-quantum": "^0.5.4",
    "@react-email/components": "^1.0.4",
    "@stripe/stripe-js": "^8.6.4",
    "@types/dompurify": "^3.0.5",
    "date-fns": "^4.1.0",
    "dompurify": "^3.3.1",
    "exifreader": "^4.36.0",
    "fflate": "^0.8.2",
    "fuse.js": "^7.1.0",
    "geist": "^1.5.1",
    "glob": "^13.0.1",
    "hash-wasm": "^4.12.0",
    "jsqr": "^1.4.0",
    "jszip": "^3.10.1",
    "launchdarkly-node-server-sdk": "^7.0.4",
    "launchdarkly-react-client-sdk": "^3.9.0",
    "lucide-react": "^0.563.0",
    "next": "^16.1.2",
    "piexifjs": "^1.0.6",
    "pqc-kyber": "^0.7.0",
    "prom-client": "^15.1.3",
    "qrcode": "^1.5.4",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "resend": "^6.7.0",
    "simple-peer": "^9.11.1",
    "socket.io": "^4.8.3",
    "socket.io-client": "^4.8.3",
    "stripe": "^20.2.0",
    "web-vitals": "^5.1.0",
    "zod": "^4.3.6",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@lhci/cli": "^0.15.0",
    "@next/bundle-analyzer": "^16.1.6",
    "@playwright/test": "^1.58.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/jszip": "^3.4.1",
    "@types/node": "^20.19.30",
    "@types/qrcode": "^1.5.6",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/simple-peer": "^9.11.9",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "critters": "^0.0.23",
    "eslint": "^9",
    "eslint-config-next": "16.1.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-security": "^3.0.1",
    "happy-dom": "^20.3.9",
    "husky": "^9.1.7",
    "lighthouse": "^12.2.1",
    "lint-staged": "^16.2.7",
    "svgo": "^4.0.0",
    "tsc-files": "^1.1.4",
    "tsx": "^4.21.0",
    "typedoc": "^0.26.11",
    "typescript": "^5",
    "vitest": "^4.0.18"
  }
}
